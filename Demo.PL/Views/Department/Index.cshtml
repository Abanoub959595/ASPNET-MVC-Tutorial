@* @using Demo.DAL.Entities  => we add it in view imports *@
@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}
<h1>All Departments</h1>
<br/>
<a asp-action="Create" class="btn btn-primary" >Create New Department</a>
<br/>
<br/>

@if(TempData["MessageSuccess"] is not null)
{
    <div class="alert alert-success">
        <h3>@TempData["MessageSuccess"]</h3>
    </div>
}





@* <div class="alert alert-danger">
    <h3>@ViewBag.Message</h3>
</div>


<div class="alert alert-warning">
    <h3>@ViewData["MessageData"]</h3>
</div> *@





@if(Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Code)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th> 
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Department" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>Details</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Departments Found!! </h3>
    </div>
}