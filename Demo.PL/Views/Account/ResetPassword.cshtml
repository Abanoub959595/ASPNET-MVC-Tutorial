@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h1>ResetPassword</h1>

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="All"></div>
            <input asp-for="@Model.Email" type="hidden"/>
            <input asp-for="@Model.Token" type="hidden"/>
            <input asp-for="@Model.Password" type="password" class="text" Placeholder="password" required=""/>
            <input asp-for="@Model.ConfirmPassword" type="password" class="text" Placeholder="Confirm Password" required=""/>
            <input type="submit" value="Reset Password"/>
        </form>
    </div>
</div>