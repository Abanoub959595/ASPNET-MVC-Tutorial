@model ForgetPasswordViewModel 
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h1>ForgetPassword</h1>

@* <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"> *@
<div class="form-gap"></div>
<div class="container">
    <div class="row">
       
                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <div class="panel-body">

                    <form asp-action="ForgetPassword" id="register-form" role="form" autocomplete="off" class="form" method="post">
                        <br/>
                        @* <div asp-validation-summary="All" class="text-danger"></div> *@
                        @Html.ValidationSummary(true, "", new {@class="text-danger"}) 
                        <br/>
                      <div class="form-group">
                        <div class="input-group">
                          <input name="email" placeholder="email address" class="form-control"  type="email" asp-for="@Model.Email">
                        </div>
                      </div>
                      <div class="form-group">
                        <input name="recover-submit" class="btn btn-lg btn-success btn-block" value="Reset Password" type="submit">
                      </div>

                      <input type="hidden" class="hide" name="token" id="token" value=""> 
                    </form>

                  </div>

          </div>
    </div>
</div>