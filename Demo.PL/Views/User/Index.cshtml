@model IEnumerable<ApplicationUser> 
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

<br />
<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Email" name="SearchValue" class="form-control"/>
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block"/>
        </div>
    </class>
</form>
<br/>
@if(Model?.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(user => user.Id)</th>
            <th scope="col">@Html.DisplayNameFor(user => user.UserName)</th>
            <th scope="col">@Html.DisplayNameFor(user => user.Email)</th>
            <th scope="col">Details</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                   <partial name="ButtonsPartialViews" model="user.Id.ToString()"/>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <br />
    <div class="alert alert-warning">
			<h3>NO Users Found !!</h3>
	</div>
}

