@model EmployeeViewModel
@{
	var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}


<div class="container text-center">
  <div class="row align-items-start">
	<div class="col">
	  <div class="form-group">
		<label asp-for="@Model.Name" class="col-form-label"></label>
		<input asp-for="@Model.Name" class="form-control" readonly/>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Address" class="col-form-label"></label>
		<input asp-for="@Model.Address" class="form-control" readonly/>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Email" class="col-form-label"></label>
		<input asp-for="@Model.Email" class="form-control" readonly/>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Salary" class="col-form-label"></label>
		<input asp-for="@Model.Salary" class="form-control" readonly/>
	</div>
	<div class="form-group from-check">
		<label asp-for="@Model.IsActive" class="from-check-input"></label>
		<input asp-for="@Model.IsActive" class="from-check-input" type="checkbox" disabled />
	</div>
	<div class="form-group">
		<label asp-for="@Model.DepartmentId" class="col-form-label"></label>
		<select asp-for="@Model.DepartmentId" asp-items="Departments" class="form-controller" disabled>
			<option>--- Select Department ---</option>
		</select>
	</div>
	<div class="col">
	  <img src="~/Files/Images/@Model.ImageUrl" class="img-circle" />
		<input type="hidden" name="employeeId" value="@Model.Id"/>

	</div>
	</div>
  </div>
</div>

