@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}



<h1>All Employees</h1>
<br/>
<a class="btn btn-info" asp-controller="Employee" asp-action="Create">Create New Employee</a>
<br />
<br />




<form asp-action="Index" asp-controller="Employee">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search..." name="SearchValue">
        <input class="btn btn-outline-success" type="submit" value="Search"/>
    </div>
</form>




@if(Model?.Count() > 0)
{

		<table class="table table-striped table-hover">
                <thead>
            <tr>
              <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
              <th scope="col">@Html.DisplayNameFor(M => M.Image)</th>
              <th scope="col">@Html.DisplayNameFor(model => model.Address)</th>
              <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
              <th scope="col">@Html.DisplayNameFor(model => model.Salary)</th>
              <th scope="col">@Html.DisplayNameFor(model => model.HireDate)</th>
              <th scope="col">@Html.DisplayNameFor(model => model.IsActive)</th>
              <th scope="col">Details</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {

            <tr>
              <th scope="row">@item.Name</th>
              <td>@item.Address</td>
              <td>@item.Email</td>
              <td>@item.Salary</td>
              <td>@item.HireDate</td>
              <td>@item.IsActive</td>
              <td>
                  <img src="~/Files/Images/@item.ImageUrl" class="img-circle" height="40" width="40" alt="Employee Image"/>
              </td>
              <td>
                <a class="btn btn-success" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">Details</a>
              </td>
              <td>
                <a class="btn btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a>
              </td>
              <td>
                <a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
              </td>
            </tr>
            }
            
          </tbody>
		</table>
		
}else
{
	<div class="alert alert-warning">
			<h3>NO Employees Found !!</h3>
	</div>
}
